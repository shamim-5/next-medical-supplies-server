datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model DueList {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  name  String
  role  String

  @@map("due-lists")
}

model TopProduct {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  category     String
  description  String
  price        Int
  stock        Int
  manufacturer String
  imageURL     String
  avatarUrl    String
}

model Product {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  category     String
  description  String
  price        Int
  stock        Int
  manufacturer String
  imageURL     String
  avatarUrl    String

  reviews Review[]
}

